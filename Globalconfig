# Do not change the following settings at all or Kodachi will break for sure! Unless you know what you are doing!

function print_good(){
	echo -e "\x1B[01;32m[*]\x1B[0m $1"
}


function print_error(){
	echo -e "\x1B[01;31m[!]\x1B[0m $1"
}

 
